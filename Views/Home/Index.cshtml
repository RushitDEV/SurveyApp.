@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Hero Section -->
<section class="hero-section py-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 600px;">
    <div class="container">
        <div class="row align-items-center" style="min-height: 500px;">
            <div class="col-lg-6 text-white">
                <h1 class="display-3 fw-bold mb-4" data-aos="fade-up">
                    Anket Oluşturma Artık Çok Kolay
                </h1>
                <p class="lead mb-4" data-aos="fade-up" data-aos-delay="100">
                    Dakikalar içinde profesyonel anketler oluşturun, müşterilerinizden geri bildirim alın ve veriye dayalı kararlar verin.
                </p>
                <div class="d-flex gap-3" data-aos="fade-up" data-aos-delay="200">
                    <a asp-controller="Survey" asp-action="Create" class="btn btn-light btn-lg px-5 shadow">
                        <i class="bi bi-plus-circle me-2"></i>Ücretsiz Başla
                    </a>
                    <a href="#how-it-works" class="btn btn-outline-light btn-lg px-5">
                        Nasıl Çalışır?
                    </a>
                </div>
                <div class="mt-5">
                    <div class="d-flex gap-4 text-white">
                        <div>
                            <h3 class="fw-bold mb-0">10K+</h3>
                            <small class="opacity-75">Kullanıcı</small>
                        </div>
                        <div>
                            <h3 class="fw-bold mb-0">50K+</h3>
                            <small class="opacity-75">Anket</small>
                        </div>
                        <div>
                            <h3 class="fw-bold mb-0">1M+</h3>
                            <small class="opacity-75">Yanıt</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <img src="https://via.placeholder.com/600x400/667eea/ffffff?text=Survey+Dashboard"
                     alt="Dashboard" class="img-fluid rounded-4 shadow-lg" data-aos="fade-left">
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="py-5 bg-light">
    <div class="container py-5">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold mb-3">Güçlü Özellikler</h2>
            <p class="lead text-muted">İhtiyacınız olan her şey burada</p>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 hover-card">
                    <div class="card-body p-4 text-center">
                        <div class="feature-icon bg-primary bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="bi bi-lightning-charge fs-2"></i>
                        </div>
                        <h4 class="fw-bold mb-3">Hızlı Oluşturma</h4>
                        <p class="text-muted">Sürükle-bırak arayüzü ile dakikalar içinde anket oluşturun.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 hover-card">
                    <div class="card-body p-4 text-center">
                        <div class="feature-icon bg-success bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="bi bi-graph-up fs-2"></i>
                        </div>
                        <h4 class="fw-bold mb-3">Gerçek Zamanlı Analiz</h4>
                        <p class="text-muted">Yanıtları anında görüntüleyin ve detaylı raporlar alın.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 hover-card">
                    <div class="card-body p-4 text-center">
                        <div class="feature-icon bg-info bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="bi bi-share fs-2"></i>
                        </div>
                        <h4 class="fw-bold mb-3">Kolay Paylaşım</h4>
                        <p class="text-muted">Anketlerinizi link ile kolayca paylaşın ve yanıt toplayın.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- How It Works -->
<section id="how-it-works" class="py-5">
    <div class="container py-5">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold mb-3">Nasıl Çalışır?</h2>
            <p class="lead text-muted">3 basit adımda anket oluşturun</p>
        </div>
        <div class="row g-5">
            <div class="col-md-4 text-center">
                <div class="step-number bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 100px; height: 100px; font-size: 2rem; font-weight: bold;">
                    1
                </div>
                <h4 class="fw-bold mb-3">Anket Oluştur</h4>
                <p class="text-muted">Sorularınızı ekleyin, soru tiplerini seçin ve anketinizi özelleştirin.</p>
            </div>
            <div class="col-md-4 text-center">
                <div class="step-number bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 100px; height: 100px; font-size: 2rem; font-weight: bold;">
                    2
                </div>
                <h4 class="fw-bold mb-3">Paylaş</h4>
                <p class="text-muted">Anket linkinizi müşterileriniz, takipçileriniz veya hedef kitlenizle paylaşın.</p>
            </div>
            <div class="col-md-4 text-center">
                <div class="step-number bg-info text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 100px; height: 100px; font-size: 2rem; font-weight: bold;">
                    3
                </div>
                <h4 class="fw-bold mb-3">Analiz Et</h4>
                <p class="text-muted">Yanıtları gerçek zamanlı olarak görüntüleyin ve detaylı raporlar alın.</p>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="py-5 bg-primary text-white">
    <div class="container py-5 text-center">
        <h2 class="display-4 fw-bold mb-4">Hemen Başlayın!</h2>
        <p class="lead mb-4">Ücretsiz hesap oluşturun ve ilk anketinizi dakikalar içinde oluşturun.</p>
        <a asp-controller="Survey" asp-action="Create" class="btn btn-light btn-lg px-5 shadow">
            <i class="bi bi-rocket-takeoff me-2"></i>Ücretsiz Dene
        </a>
    </div>
</section>

<style>
    .hover-card {
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .hover-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.15) !important;
        }
</style>