@model IEnumerable<SurveyApp.ViewModels.SurveyListViewModel>

@{
    ViewData["Title"] = "Anketlerim";
}

<div class="container-fluid p-0">
    <!-- Header -->
    <div class="bg-white border-bottom">
        <div class="container py-4">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0 fw-bold">Anketlerim</h2>
                <a asp-action="Create" class="btn btn-primary px-4">
                    <i class="bi bi-plus-lg me-2"></i>Yeni Anket Oluştur
                </a>
            </div>
        </div>
    </div>

    <!-- Survey Grid -->
    <div class="container py-5">
        @if (Model.Any())
        {
            <div class="row g-4">
                @foreach (var survey in Model)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm hover-card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <span class="badge @(survey.IsActive ? "bg-success" : "bg-secondary")">
                                        @(survey.IsActive ? "Aktif" : "Pasif")
                                    </span>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-link text-muted" data-bs-toggle="dropdown">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li>
                                                <a class="dropdown-item" asp-action="Details" asp-route-id="@survey.Id">
                                                    <i class="bi bi-eye me-2"></i>Görüntüle
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-action="Edit" asp-route-id="@survey.Id">
                                                    <i class="bi bi-pencil me-2"></i>Düzenle
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-controller="Response" asp-action="TakeSurvey" asp-route-id="@survey.Id">
                                                    <i class="bi bi-pencil-square me-2"></i>Anketi Cevapla
                                                </a>
                                            </li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <a class="dropdown-item text-danger" href="#" onclick="deleteSurvey(@survey.Id, event)">
                                                    <i class="bi bi-trash me-2"></i>Sil
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <a asp-action="Details" asp-route-id="@survey.Id" class="text-decoration-none text-dark">
                                    <h5 class="card-title fw-bold mb-2">@survey.Title</h5>
                                    <p class="card-text text-muted small">
                                        @(survey.Description?.Length > 100 ? survey.Description.Substring(0, 100) + "..." : survey.Description)
                                    </p>
                                </a>
                                <div class="d-flex justify-content-between align-items-center mt-3 pt-3 border-top">
                                    <small class="text-muted">
                                        <i class="bi bi-calendar3 me-1"></i>
                                        @survey.CreatedDate.ToString("dd MMM yyyy")
                                    </small>
                                    <small class="text-muted">
                                        <i class="bi bi-question-circle me-1"></i>
                                        @survey.QuestionCount Soru
                                    </small>
                                </div>

                                <!-- Action Buttons -->
                                <div class="mt-3 d-flex gap-2">
                                    <a asp-controller="Response" asp-action="TakeSurvey" asp-route-id="@survey.Id"
                                       class="btn btn-sm btn-outline-primary flex-fill" target="_blank">
                                        <i class="bi bi-box-arrow-up-right me-1"></i>Cevapla
                                    </a>
                                    <button class="btn btn-sm btn-outline-secondary flex-fill"
                                            onclick="copyLink(@survey.Id, event)">
                                        <i class="bi bi-share me-1"></i>Paylaş
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="bi bi-clipboard-data text-muted" style="font-size: 5rem;"></i>
                </div>
                <h4 class="text-muted">Henüz anket oluşturmadınız</h4>
                <p class="text-muted">Hemen ilk anketinizi oluşturun ve yanıtları toplamaya başlayın</p>
                <a asp-action="Create" class="btn btn-primary mt-3 px-4">
                    <i class="bi bi-plus-lg me-2"></i>Yeni Anket Oluştur
                </a>
            </div>
        }
    </div>
</div>

<!-- Share Modal -->
<div class="modal fade" id="shareModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-share me-2"></i>Anketi Paylaş
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="text-muted small mb-3">Bu linki kopyalayarak anketinizi paylaşabilirsiniz:</p>
                <div class="input-group">
                    <input type="text" class="form-control" id="shareLink" readonly>
                    <button class="btn btn-primary" onclick="copyToClipboard()">
                        <i class="bi bi-clipboard me-1"></i>Kopyala
                    </button>
                </div>
                <div class="alert alert-success mt-3 d-none" id="copySuccess">
                    <i class="bi bi-check-circle me-2"></i>Link kopyalandı!
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function deleteSurvey(id, event) {
        event.preventDefault();

        if (confirm('Bu anketi silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.')) {
            fetch('/Survey/Delete/' + id, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Silme işlemi başarısız!');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Bir hata oluştu!');
            });
        }
    }

    function copyLink(surveyId, event) {
        event.preventDefault();
        const baseUrl = window.location.origin;
        const shareUrl = `${baseUrl}/Response/TakeSurvey/${surveyId}`;

        document.getElementById('shareLink').value = shareUrl;

        const modal = new bootstrap.Modal(document.getElementById('shareModal'));
        modal.show();
    }

    function copyToClipboard() {
        const shareLink = document.getElementById('shareLink');
        shareLink.select();
        shareLink.setSelectionRange(0, 99999); // Mobil için

        navigator.clipboard.writeText(shareLink.value).then(() => {
            const successAlert = document.getElementById('copySuccess');
            successAlert.classList.remove('d-none');

            setTimeout(() => {
                successAlert.classList.add('d-none');
            }, 3000);
        });
    }
</script>

<style>
    .hover-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important;
        }

    .btn-sm {
        font-size: 0.875rem;
    }
</style>