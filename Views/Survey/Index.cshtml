@model IEnumerable<SurveyApp.Models.Survey>

@{
    ViewData["Title"] = "Anketlerim";
}

<div class="container-fluid p-0">
    <!-- Header -->
    <div class="bg-white border-bottom">
        <div class="container py-4">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0 fw-bold">Anketlerim</h2>
                <a asp-action="Create" class="btn btn-primary px-4">
                    <i class="bi bi-plus-lg me-2"></i>Yeni Anket Olustur
                </a>
            </div>
        </div>
    </div>

    <!-- Survey Grid -->
    <div class="container py-5">
        @if (Model.Any())
        {
            <div class="row g-4">
                @foreach (var survey in Model)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm hover-card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <span class="badge bg-success">@(survey.IsActive ? "Aktif" : "Pasif")</span>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-link text-muted" data-bs-toggle="dropdown">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" asp-action="Details" asp-route-id="@survey.Id">Görüntüle</a></li>
                                            <li><a class="dropdown-item" href="#">Düzenle</a></li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li><a class="dropdown-item text-danger" href="#">Sil</a></li>
                                        </ul>
                                    </div>
                                </div>
                                <h5 class="card-title fw-bold mb-2">@survey.Title</h5>
                                <p class="card-text text-muted small">@survey.Description</p>
                                <div class="d-flex justify-content-between align-items-center mt-3 pt-3 border-top">
                                    <small class="text-muted">
                                        <i class="bi bi-calendar3 me-1"></i>
                                        @survey.CreatedDate.ToString("dd MMM yyyy")
                                    </small>
                                    <small class="text-muted">
                                        <i class="bi bi-question-circle me-1"></i>
                                        0 Soru
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <img src="https://via.placeholder.com/200" alt="No surveys" class="mb-4">
                <h4 class="text-muted">Henüz anket oluþturmadýnýz</h4>
                <p class="text-muted">Hemen ilk anketinizi oluþturun ve yanýtlarý toplamaya baþlayýn</p>
                <a asp-action="Create" class="btn btn-primary mt-3">
                    <i class="bi bi-plus-lg me-2"></i>Yeni Anket Oluþtur
                </a>
            </div>
        }
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
</style>
